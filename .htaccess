# Запрет доступа к файлам лицензии, шаблонов, конфигурации
<files ~ "\.(lic|ini|tpl|core\.php|inc\.php|hook\.php|class\.php|sql)$"> 
Order Deny,Allow
Deny From All
</files>

# Запрет доступа к файлам конфигурации
<files ~ "(adm_|admin_|tab_)"> 
Order Deny,Allow
Deny From All
</files>